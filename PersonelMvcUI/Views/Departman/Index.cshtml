
@using PersonelMvcUI.Models.EntityFramework
@model List<Departman>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a class="btn btn-success" href="/Departman/Yeni">Yeni Departman</a>
<h2>Departman Listesi</h2>


<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ad</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var departman in Model)
        {
        <tr>
            <td>@departman.Id</td>
            <td>@departman.Ad</td>
            <td align="center" width="50px"><a class="btn btn-primary"  href="/Departman/Guncelle/@departman.Id">Güncelle</a></td>
            <td align="center" width="50px"><a class="btn btn-warning" href="/Departman/Sil/@departman.Id">Sil</a></td>
        </tr>
        }

    </tbody>
</table>